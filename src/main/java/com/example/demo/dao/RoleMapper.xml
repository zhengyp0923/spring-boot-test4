  </update>

  <!--根据用户名查询所有的角色-->
  <select id="com.example.demo.dao.RoleMapper.selectRolesByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
    SELECT r.id, r.name
    FROM user u
         LEFT JOIN u_r ur ON u.id=ur.u_id
         LEFT JOIN role r ON ur.r_id=r.id
         WHERE u.username=#{username,jdbcType=VARCHAR}
  </select>
